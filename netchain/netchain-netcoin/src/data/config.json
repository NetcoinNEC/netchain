{
  "server": {
    "port": 3000,
    "host": "localhost"
  },
  "database": {
    "type": "leveldb",
    "path": "./data/ledger"
  },
  "network": {
    "maxConnections": 100,
    "timeout": 5000
  },
  "consensus": {
    "type": "PoS",
    "validatorSelection": {
      "minStake": 1000,
      "maxValidators": 10
    }
  },
  "logging": {
    "level": "info",
    "file": "./logs/app.log"
  },
  "tokenomics": {
    "inflationRate": 0.05,
    "burnRate": 0.01
  }
}